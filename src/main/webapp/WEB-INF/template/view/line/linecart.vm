<script type="text/javascript">
    $(function(){
	
		$("#SelectMember").change(function(){
			var info=$(this).val().replace("null","").split("|");
			$("#or_name").val(info[1]);
			$("#mId").val(info[0]);
			$("#or_mobile").val(info[3]);
			$("#or_tel").val(info[4]);
			$("#or_fax").val(info[5]);
		})

        $("#NewOrder").Validform({
            tiptype:1,
            ajaxPost:true,
            postonce:true,
            callback:function(data)
            {
                if(data.code==0)
                {
                    setTimeout(function () {
                        $.Hidemsg();
                        location.href="/tour/order.htm";
                    }, 1000);
                }
            }
        });
    })

$("#tourName").autocomplete("/allCompany.htm?type=tour",{
    dataType:'json',
    parse:function(da) {
        var parsed = []; 
		data=da.data;
        for (var i = 0; i < data.length; i++) {  
            parsed[parsed.length] = {  
            data: data[i],  
            value: data[i].cId,  
            result: data[i].cName
            };  
        }  
        return parsed;  
    },  
    formatItem: function(item) {
    	return "<div>"+item.cName+"</div>";  
     },  
    formatMatch: function(item) {  
        return item.cName;  
    },  
    formatResult: function(item) {  
    	return item.cName;  
    }  
     }).result(function(event, item, formatted) {            
        $("#cId").val(item.cId);
		SelecttourMember(item.cId);
    });  

</script>
